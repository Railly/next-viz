{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es6", "es2017", "dom"],
    "target": "es6",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "exclude": ["**/*.config.ts", "__tests__/**/*.ts", "dist"]
}